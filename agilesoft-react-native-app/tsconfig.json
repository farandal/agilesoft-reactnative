{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "build",
    "rootDir": "src",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "allowJs": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "esModuleInterop": true,
    "lib": ["es6"],
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitThis": true,
    "strictNullChecks": false,
    "removeComments": true,
    "noEmit": true,
    "strict": false,
    "noUnusedLocals":false,
    "forceConsistentCasingInFileNames": true
  },
  "filesGlob": [
    "src/typings.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "node_modules/typescript/lib/lib.es6.d.ts"
  ],
  "types": [
    "react",
    "react-dom",
    "react-native",
    "react-test-renderer",
    "jest"
  ],
  "exclude": [
    "build",
    "coverage",
    "node_modules",
    "babel.config.js",
    ".eslintrc.js",
    ".prettirerrc.js",
    "metro.config.js",
    "jest.config.js",
    "index.js",
  ],
  "compileOnSave": false
}
